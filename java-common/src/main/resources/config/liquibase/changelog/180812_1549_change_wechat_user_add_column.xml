<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="180812_1549_change_wechat_user_add_column" author="cinling">
        <addColumn tableName="wechat_user">
            <column name="nick_name" type="varchar(32)" defaultValue="" remarks="用户昵称" afterColumn="session_key">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="tinyint" defaultValue="0" remarks="用户性别。0：为止，1：男性，2：女性" afterColumn="nick_name">
                <constraints nullable="false"/>
            </column>
            <column name="language" type="char(8)" defaultValue="" remarks="用户语言" afterColumn="gender">
                <constraints nullable="false"/>
            </column>
            <column name="avatar_url" type="varchar(200)" defaultValue="" remarks="用户头像url地址" afterColumn="language">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(32)" defaultValue="" remarks="国家" afterColumn="avatar_url">
                <constraints nullable="false"/>
            </column>
            <column name="province" type="varchar(32)" defaultValue="" remarks="省份" afterColumn="country">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(32)" defaultValue="" remarks="城市" afterColumn="province">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>